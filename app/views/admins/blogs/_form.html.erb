<%= form_for [:admins, @blog], authenticity_token: true do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
        <%= form_error(@blog, :title) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category, Blog.categories.keys.map { |key| [key.humanize, Blog.categories[key]] }, { prompt: 'Select category' }, class: "form-control" %>
        <%= form_error(@blog, :category) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
        <%= form_error(@blog, :category) %>
      </div>
    </div>
    <div class="col-md-6">
      <% if @blog.image.present? %>
        <image src="<%= @blog.image.expiring_url(60) %>" width="200"/>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :short_description %>
        <%= f.text_field :short_description, class: "form-control" %>
        <%= form_error(@blog, :short_description) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, rows: 15, cols: 180 %>
        <%= form_error(@blog, :content) %>
      </div>
    </div>
  </div>
  <div class="form-wizard-actions">
    <%= link_to "Back", admins_blogs_path, class: "btn btn-default legitRipple" %>
    <button class="btn btn-primary legitRipple" type="submit"><%= @blog.id ? "Update" : "Create" %> <i class="icon-arrow-right14 position-right"></i></button>
  </div>
<% end %>
<script type="text/javascript">
  tinyMCE.init({
    selector: "textarea"
  });
</script>
