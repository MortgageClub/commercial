<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sort_link @q, :category, "Category" %></th>
      <th><%= sort_link @q, :title, "Title" %></th>
      <th style="text-align: center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.category.titleize %></td>
        <td><%= blog.title %></td>
        <td style="text-align: center">
          <%= link_to edit_admins_blog_path(blog) do %>
            <i class="icon-pencil3"></i>
          <% end %>
          <%= link_to admins_blog_path(blog), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="icon-trash-alt color-red"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>