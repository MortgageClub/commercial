<table class="table table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Type</th>
      <th>Description</th>
      <th>File Name</th>
      <th style="text-align: center">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.document_type.category.titleize %></td>
        <td><%= document.document_type.name %></td>
        <td><%= document.description %></td>
        <td><%= document.original_filename %></td>
        <td style="text-align: center">
          <%= link_to edit_advisors_loan_document_path(@loan, document) do %>
            <i class="icon-pencil3"></i>
          <% end %>
          <%= link_to advisors_loan_document_path(@loan, document), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="icon-trash-alt color-red"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>